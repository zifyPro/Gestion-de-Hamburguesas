model Productos {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Int
  img         String
  type        String
  ventas      Ventas[]
}

model Ventas {
  id            Int         @id @default(autoincrement())
  nombre        String
  telefono      String
  direccion     String
  numeroDeOrden Int         @default(autoincrement())
  userId        Int?
  user          User?       @relation(fields: [userId], references: [id])
  productos     Productos[]
}

model User {
  id       Int      @id @default(autoincrement())
  user_id  String   @unique
  username String   @unique
  email    String   @unique
  ventas   Ventas[]
}
